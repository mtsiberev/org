@model OrganizationsWebApplication.Models.DepartmentModel

@{
    ViewBag.Title = "DepartmentInfo";
}
<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="../../Content/style.css" type="text/css" />
    </head>
<body>
    <h3>@Model.Name</h3>
    <table>
        @foreach (var employee in Model.Employees)
        {
            <tr>
                <td class="block" style="color:black">
                    <div>@employee.Name</div>
                </td>
                <td class="operationBlock">
                    @using (Html.BeginForm("UpdateEmployeeMenu", "Home",
                        new { id = employee.Id }))
                    {
                        <input type="image" src="../../Content/ic_mode_edit_24px.svg" alt="edit" name="submit" />
                    }
                </td>

                <td class="operationBlock">
                    @using (Html.BeginForm("DeleteEmployee", "Home",
                        new { id = employee.Id }))
                    {
                        <input type="image" src="../../Content/ic_delete_24px.svg" alt="delete" name="submit" />
                    }
                </td>

            </tr>
        }
    </table>
    <p></p>
    @using (Html.BeginForm("AddEmployeeMenu", "Home", 
        new { id = @Model.Id }, FormMethod.Post))
    {
        <button type="submit">Add employee</button>
    }


</body>
</html>
