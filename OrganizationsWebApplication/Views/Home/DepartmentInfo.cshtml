@model OrganizationsWebApplication.Models.DepartmentModel

@{
    ViewBag.Title = "DepartmentInfo";
}

<html>
<head>
</head>
<body style="font-family:Consolas;color:#569CD6;font-size:20px; background-color:#262626;">
 <h3>@Model.Name</h3>

    @foreach (var employee in Model.Employees)
    {
        <div style="color: white">@employee.Name</div>
    }
    
    @using (Html.BeginForm("AddEmployeeMenu", "Home", new { id = @Model.Id }, FormMethod.Post))
    {
        <button type="submit">Add employee</button>
    }
    

</body>
</html>
