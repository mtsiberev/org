@{
    ViewBag.Title = @Resource.Login;
    Layout = null;

}

@using OrganizationsWebApplication.LocalResource
@model OrganizationsWebApplication.Models.Account

<!DOCTYPE html>

<html>
<head runat="server">
    <meta name="viewport" content="width=device-width" />
    <title>@Resource.Login</title>

</head>
<body>

    <div class="header" style="background: #3F51B5;">
        <span style="background: #3F51B5;">
            <span style="color: #fff">
                <h2>@Resource.Login</h2>

                <br>
                <br>
       
                @Html.Partial("~/Views/_GlobalizationBar.cshtml")
                
                @using (Html.BeginForm("Login", "Account"))
                {
                    <table>
                        <tr>
                            <td>
                                <div class="accountContainer">
                                    <div class="group">

                                        <span class="text-danger">
                                            @ViewData["error"]
                                        </span>

                                        @Html.TextBoxFor(m => m.UserName, new { @class = "inputMaterial", @type = "text", @required = "required" })
                                        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                                        <span class="highlight"></span>
                                        <span class="bar"></span>
                                        <label>@Resource.UserNameLabel</label>
                                    </div>

                                    <div class="group">
                                        @Html.PasswordFor(m => m.Password, new { @class = "inputMaterial", @required = "required" })
                                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                        <span class="highlight"></span>
                                        <span class="bar"></span>
                                        <label>@Resource.PasswordLabel</label>
                                    </div>
                                    <input type="submit" value="OK">
                                    <br>
                                    <br>
                                    @Html.ActionLink(Resource.Registration, "Register", "Account")
                                </div>
                            </td>
                        </tr>
                    </table>
                }
            </span>
        </span>
    </div>
    
</body>
</html>
