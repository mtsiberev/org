@using OrganizationsWebApplication.LocalResource
<div class="userMenu">
    <nav>
        <ul>
            <li>
                <a class="dropdown" href="#">@WebSecurity.CurrentUserName</a>
                <ul>
                    <li>
                        @Html.ActionLink(Resource.Logout, "Logout", "Account")
                    </li>

                    @if (Roles.IsUserInRole("admin"))
                    {
                        <li>
                            @Html.ActionLink(Resource.Administration, "ChangeRolesMenu", "AdministrationMenu")
                        </li>
                    }
                </ul>
            </li>
        </ul>
    </nav>
</div>
