@using Organizations.Helpers
@using OrganizationsWebApplication.LocalResource
@model OrganizationsWebApplication.Models.DepartmentWithEmployeesViewModel

@{
    ViewBag.Title = @Resource.DepartmentInfo + ": " + @Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wrapper">
    
        @Html.Partial("~/Views/_MainCommandsBar.cshtml", @Model)
    
    <div class="content">
        @foreach (var employee in Model.Content)
        {
            <div class="row">
                <span class="block" style="color:black">
                    <a>
                        @employee.Name
                    </a>
                </span>
            @if (OwnershipHelper.IsCurrentUserOwner(Model.ParentId, Model.OwnersList) || (Roles.IsUserInRole("admin")))
            {
                    <span class="operationBlock">
                        @using (Html.BeginForm("UpdateEmployeeMenu", "DepartmentInfo",
                            new
                            {
                                id = employee.Id,
                                name = employee.Name,
                                pageNumberInOrganizationsList = Model.PageNumberInOrganizationsList,
                                pageNumberInOrganizationInfo = Model.PageNumberInOrganizationInfo,
                                pageNumberInDepartmentInfo = Model.PageNumberInDepartmentInfo,
                                viewType = Model.ViewType,
                                sortType = Model.SortType
                            }))
                        {
                            <input type="image" src="../../Content/ic_mode_edit_24px.svg" alt="edit" name="submit" />
                        }

                        @using (Html.BeginForm("DeleteEmployee", "DepartmentInfo",
                            new
                            {
                                id = employee.Id,
                                pageNumberInOrganizationsList = Model.PageNumberInOrganizationsList,
                                pageNumberInOrganizationInfo = Model.PageNumberInOrganizationInfo,
                                pageNumberInDepartmentInfo = Model.PageNumberInDepartmentInfo,
                                viewType = Model.ViewType,
                                sortType = Model.SortType
                            }))
                        {
                            <input type="image" src="../../Content/ic_delete_24px.svg" alt="delete" name="submit" />
                        }
                    </span>
                }
            </div>
        }
    </div>
</div>



@if (Model.ViewType == "list")
{
    <script>
        setListView()
    </script>
}


@if (Model.ViewType == "grid")
{
    <script>
        setGridView()
    </script>
}




@Html.Partial("~/Views/_PagingBar.cshtml", Model)

