@model OrganizationsWebApplication.Models.DepartmentWithEmployeesViewModel

@{
    ViewBag.Title = "Department Info";
}
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="../../Content/style.css" type="text/css" />
</head>
<body>

    <div class="header" style="background: #3F51B5;">
        <span style="background: #3F51B5;">
            <span style="color: #fff">
                @Model.Name
            </span>
        </span>
    </div>

    <div class="content">
        @foreach (var employee in Model.Employees)
        {
            <div class="row">
                <span class="block" style="color:black">
                    <span>@employee.Name</span>
                </span>

                <span class="operationBlock">
                    @using (Html.BeginForm("UpdateEmployeeMenu", "Employee",
                        new { id = employee.Id }))
                    {
                        <input type="image" src="../../Content/ic_mode_edit_24px.svg" alt="edit" name="submit" />
                    }

                    @using (Html.BeginForm("DeleteEmployee", "Employee",
                        new { id = employee.Id }))
                    {
                        <input type="image" src="../../Content/ic_delete_24px.svg" alt="delete" name="submit" />
                    }
                </span>
            </div>
        }
    </div>
</body>
</html>
